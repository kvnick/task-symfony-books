<form method="post" action="{{ path('author_delete', {'id': author.id}) }}" onsubmit="return confirm('{{ 'Are you sure you want to delete this item?'|trans }}');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ author.id) }}">
    <button type="submit" class="{% if className is defined %}{{ className }}{% endif %} btn">{{ 'main.delete'|trans }}</button>
</form>
