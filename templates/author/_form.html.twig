{{ form_start(form) }}
    {% if form.vars.errors|length > 0 %}
        <div class="alert alert-danger">
            {{ form_errors(form) }}
        </div>
    {% endif %}

    <div class="row">
        <div class="col-sm-8">
            <div class="form-group row">
                {{ form_label(form.lastname, '', {
                    'label_attr': {'class': 'col-sm-3 col-form-label'}
                }) }}
                <div class="col-sm-9">
                    {{ form_widget(form.lastname, {attr: {'class': 'form-control'}}) }}
                    <div class="valid-feedback">{{ form_errors(form.lastname) }}</div>
                </div>
            </div>
            <div class="form-group row">
                {{ form_label(form.firstname, '', {
                    'label_attr': {'class': 'col-sm-3 col-form-label'}
                }) }}
                <div class="col-sm-9">
                    {{ form_widget(form.firstname, {attr: {'class': 'form-control'}}) }}
                    <div class="valid-feedback">{{ form_errors(form.firstname) }}</div>
                </div>
            </div>
            <div class="form-group row">
                {{ form_label(form.middlename, '', {
                    'label_attr': {'class': 'col-sm-3 col-form-label'}
                }) }}
                <div class="col-sm-9">
                    {{ form_widget(form.middlename, {attr: {'class': 'form-control'}}) }}
                    <div class="valid-feedback">{{ form_errors(form.middlename) }}</div>
                </div>
            </div>
        </div>
    </div>

    <button class="btn btn-primary">{{ button_label|default('main.save')|trans }}</button>
{{ form_end(form) }}

